.wrapper_with_padding
  #doc_show
    %h1.title= @doc.title
    -if @doc.gdoc
      =link_to "#{@doc.gdoc}", @doc.gdoc, target: '_blank'
      %p= @doc.content
    -else  
      %p= @doc.content

    .buttons
      = link_to "All Docs", docs_path
      = link_to "Edit Doc", edit_doc_path(@doc)
      = link_to "Trash it", doc_path(@doc), method: :delete, data: {confirm: "Are you sure?"}
